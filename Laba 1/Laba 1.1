#include <stdio.h>
#include <math.h>

int main()
{
	int b, q, n;
	int sum;
	printf("Input number b,q,n\n");
	printf("b=");
	scanf_s("%d",&b);
	printf("q=");
	scanf_s("%d",&q);
	printf("n=");
	scanf_s("%d", &n);
	{    
		sum = 1;
		if (q == 1)
		printf("Error,you can't divide by 0\n");
		else {
			sum = b * (pow(q, n) - 1) / (q - 1);
			printf("%d", sum);
		}

	}
	return 0;
}
